<script>
function choice(my, that, you1, you2, you11, bbbb, bvb, vvvv){
    document.getElementById(my).style.display="block";
    document.getElementById(that).style.color="blue";
    document.getElementById(you1).style.display="none";
    document.getElementById(you2).style.display="none";
    document.getElementById(you11).style.color="white";
    document.getElementById(bbbb).style.color="white";   
    document.getElementById(bvb).style.display="none";
    document.getElementById(vvvv).style.color="white";
}

function gg(){
    document.getElementById("eng").style.display="none";
    document.getElementById("arabic").style.display='block';
}
function ff(){
    document.getElementById("eng").style.display="block";
    document.getElementById("arabic").style.display='none';
}

let h = [];

function del(){
    let x = confirm("Are you deleting your names?");
    if (x){
        localStorage.removeItem("namesall");
        h = [];
        document.getElementById("divnames").innerHTML = `<h1>you don't have the names now</h1>`;
    }
}

if (localStorage.getItem("namesall")){
    h = JSON.parse(localStorage.getItem("namesall"));
    document.getElementById("divnames").innerHTML = `
        <button onclick="del()" style="width:100%;background-color:aqua;color:red;border-color:aqua;display:block;">DELETE</button>
        <h2>${h.join('</h2><h2>')}</h2>
    `;
}

function c(){
    const val = document.getElementById("write").value.trim();
    if (!val) return;
    if (h.includes(val)){
        alert("Name already exists!");
    } else {
        h.push(val);
        localStorage.setItem("namesall", JSON.stringify(h));
        document.getElementById("divnames").innerHTML = `
            <button onclick="del()" style="width:100%;background-color:aqua;color:red;border-color:aqua;display:block;">DELETE</button>
            <h2>${h.join('</h2><h2>')}</h2>
        `;
    }
    document.getElementById("write").value = "";
}

document.getElementById("write").addEventListener("keydown", (e)=>{
    if(e.key.toLowerCase() == "enter"){ c(); }
});

function s(){
    let gg = document.getElementById("rsearch").value.trim();
    let c = h.filter(z => z.includes(gg));
    if (gg === "") {
        document.querySelector("#names").innerHTML = ``;
    } else if (c.length != 0) {
        document.querySelector("#names").innerHTML = `<span>${c.join(" - ")}</span>`;
    } else {
        document.querySelector("#names").innerHTML = `<h1 style="color:red;">X</h1>`;
    }
}
document.getElementById("rsearch").addEventListener("input", s);
</script>
